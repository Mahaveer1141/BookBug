<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".ShowUserActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/user_image"
                android:scaleType="fitXY"
                android:src="@drawable/profile"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="Mahaveer Soni"
                android:textSize="20sp" />

            <Button
                android:id="@+id/follow"
                android:layout_gravity="bottom"
                android:text="Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/show_post"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:text="0\nPosts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/show_followers"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:text="0\nFollowers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/show_followings"
                android:textSize="18sp"
                android:fontFamily="@font/quicksand_bold"
                android:text="0\nFollowing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/quicksand_bold"
            android:textSize="16sp"
            android:text="My Collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/more"
            android:gravity="end"
            android:textColor="@color/dark_blue"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"
            android:text="See all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imageView1"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imageView2"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:elevation="14dp"
            app:cardCornerRadius="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imageView3"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="140dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>
